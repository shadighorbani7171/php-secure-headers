{
    "name": "shadi/php-secure-headers",
    "description": "A simple and powerful PHP library for managing secure HTTP headers",
    "version": "0.1.0",
    "keywords": ["security", "headers", "csp", "php", "x-frame-options", "hsts"],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/shadighorbani7171/php-secure-headers",
    "support": {
        "issues": "https://github.com/shadighorbani7171/php-secure-headers/issues",
        "source": "https://github.com/shadighorbani7171/php-secure-headers"
    },
    "authors": [
        {
            "name": "Shadi Ghorbani",
            "email": "shadighorbani7171@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "SecureHeaders\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SecureHeaders\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "check": [
            "php -l src/SecureHeaders.php",
            "phpunit"
        ],
        "analyze": [
            "php -l src/",
            "phpstan analyze src/ --level=8"
        ],
        "fix": "php-cs-fixer fix src/",
        "fix-test": "php-cs-fixer fix tests/",
        "check-all": [
            "@fix",
            "@fix-test",
            "@analyze",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test-coverage": "Generate test coverage report",
        "check": "Check syntax and run tests",
        "analyze": "Run static analysis",
        "fix": "Fix coding standards in src/",
        "fix-test": "Fix coding standards in tests/",
        "check-all": "Run all checks and tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
} 